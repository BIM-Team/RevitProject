<Page x:Class="Revit.Addin.RevitTooltip.ElementInfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Revit.Addin.RevitTooltip"
             mc:Ignorable="d" 
             SizeChanged="OnPageSizeChanged"
             d:DesignHeight="600" d:DesignWidth="300" Width="400">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="auto" Margin="0" VerticalAlignment="Top" Width="auto">
            <TabItem Header="全部">
        <local:ElementInfoHost HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="elementInfoHost"/>
            </TabItem>
            
        </TabControl>
    </Grid>
</Page>
